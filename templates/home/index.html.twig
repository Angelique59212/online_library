{% extends 'base.html.twig' %}

{% block title %}Biblioth√®que en ligne{% endblock %}

{% block body %}
<div class="home">
    <h1>Accueil</h1>

    {% for shelf in shelfs %}
        <div class="shelf">
           <h2>{{ shelf.name }}</h2>
            {% for category in shelf.category.values %}
                <h2>{{ category.nameCategory }}</h2>
                {% for book in category.book.values %}
                    {% if book.borrower == null %}
                        <h3>{{ book.nameBook }}</h3>
                    {% endif %}
                {% endfor%}
            {% endfor %}
        </div>
    {% endfor %}

</div>

{% endblock %}
